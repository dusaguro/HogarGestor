@page
@model Frontend.Pages.Registros.Familiares

@{
    ViewData["Title"] = "Familiares";
}

<!DOCTYPE html>

<html>
<head>
    <title>Familiares</title>
    <link rel="stylesheet" href="css/Formularios.css">
    <link rel="script" href="js/site.js">
</head>
<body>
<section style="float: left;width: 35%">
    <h3 class="display-5">Registro de Familiares</h3>
    <form method="post">
        <label for="genere">Genero: </label>
        <input type="radio" id="male" name="genere" value="0">
        <label for="male">Masculino </label>
        <input type="radio" id="female" name="genere" value="1">
        <label for="female">Femenino </label><br>

        <label for="names">Nombres*: </label>
        <input type="text" id="names" name="names" pattern="[a-zA-Z\s]+"><br>
        
        <label for="lastnames">Apellidos*: </label>
        <input type="text" id="lastnames" name="lastnames" pattern="[a-zA-Z\s]+"><br>
        
        <label for="document">Documento*: </label>
        <input type="text" id="document" name="document" pattern="[0-9]+"><br>
        
        <label for="phone">Telefono*: </label>
        <input type="tel" id="phone" name="phone" pattern="[0-9]{10}"><br>
        <small>(Ejemplo: 3001115588 o 6027223344)</small><br>

        <label for="relationship">Parentesco*: </label>
        <input type="text" id="relationship" name="relationship" pattern="[a-zA-Z\s]+"><br>
        
        <label for="e-mail">Correo*: </label>
        <input type="email" id="e-mail" name="e-mail"><br>

        <input type="submit" value="Registrar"><br>
    </form>
    @{
        switch (Model.mensaje)
        {
            case 1:
                <script>
                    window.alert("Error al agregar el familiar")
                </script>
                Model.mensaje = 0;
                break;

            case 2:
                <script>
                    window.alert("No puede dejar vacios campos obligatorios*")
                </script>
                Model.mensaje = 0;
                break;

            case 3:
                <script>
                    window.alert("Familiar registrado con exito!")
                </script>
                Model.mensaje = 0;
                break;

            default:
                Model.mensaje = 0;
                break;
        }
    }

</section>
<aside style="float: left;width: 65%">
    <h3 class="display-5">Lista de Familiares</h3>
    <table class="table">
        <tr>
            <th>Nombre</th>
            <th>Documento</th>
            <th>Telefono</th>
            <th>Correo</th>
            <th>Opciones</th>
        </tr>
        @foreach (var n in Model.familiares)
        {
            <tr>
                <td>@n.Nombre @n.Apellido</td>
                <td>@n.Documento</td>
                <td>@n.Telefono</td>
                <td>@n.Correo</td>
                <td>
                    <a asp-page="./Informacion" asp-route-id="@n.Id" asp-route-tipo="familiar">
                        <span class="material-icons">
                            info
                        </span>
                    </a>
                    <a asp-page="./Editar" asp-route-id="@n.Id" asp-route-tipo="familiar">
                        <span class="material-icons">
                            edit
                        </span>
                    </a>
                    <a asp-page="./Borrar" asp-route-id="@n.Id" asp-route-tipo="familiar">
                        <span class="material-icons">
                            delete
                        </span>
                    </a>
                    
                </td>
            </tr>
        }
    </table>
</aside>
</body>
</html>